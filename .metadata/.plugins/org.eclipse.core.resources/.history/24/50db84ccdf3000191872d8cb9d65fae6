package cn.sxt.oop;

import java.util.Arrays;

public class TestArraySort {

	public static void main(String[] args){
	//	int[] s=new int[10];
	//	s[1]=3;
		int[] a={3,5,1,6,8,2,4,9,0,7};
		//冒泡排序
		for(int j=0;j<a.length-1-j;j++){//   -j：  j每执行完一次循环，找出一个最大数
			for(int i=0;i<a.length-1;i++){
				if(a[i]>a[i+1]){
					int temp=a[i];
					a[i]=a[i+1];
					a[i+1]=temp;
				}
			
				System.out.println(Arrays.toString(a));
			}
			System.out.println("################");
		}
	}
}
