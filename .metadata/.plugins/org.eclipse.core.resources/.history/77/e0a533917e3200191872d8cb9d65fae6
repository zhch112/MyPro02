package cn.sxt.io;

import java.io.File;

public class TestIOStudy {

	public static void main(String[] args){
	
		File file=new File("F:/¶¯Âþ");
		count(file);
	}
	private static long len=0;
	public static void count(File f){
		if(null!=f&&f.exists()){
			if(f.isFile()){
			len+=f.length();
			}else{
				for(File s:f.listFiles()){//×ÓËï¼¶
					count(s);
				}
			}
		}
	}
}
